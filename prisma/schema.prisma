generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CIDADAO
  STAFF
  ADMIN
}

enum Gravidade {
  BAIXA
  MEDIA
  ALTA
}

model OrdenServico {
  id        Int              @id @default(autoincrement())
  numero    Int
  name      String
  protocolo String           @unique
  endereco  String           @default("")
  status    StatusOcorrencia @default(PENDENTE)

  ocorrenciaId Int?
  ocorrencia   Ocorrencia? @relation(fields: [ocorrenciaId], references: [id])

  createdAt DateTime @default(now())
}

enum StatusOcorrencia {
  PENDENTE
  EM_ANALISE
  ATRASADA
  CONCLUIDA
  CANCELADA
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(CIDADAO)
  telefone String?
  ativo    Boolean @default(true)

  ocorrenciasResponsavel Ocorrencia[]      @relation("Responsavel")
  comentarios            Comentario[]
  historicos             HistoricoStatus[]
  avaliacoes             Avaliacao[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  admins    Admin[]

  @@map("users")
}

model Admin {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model Categoria {
  id        Int    @id @default(autoincrement())
  nome      String @unique
  descricao String

  ocorrencias Ocorrencia[]

  createdAt DateTime @default(now())
}

model Ocorrencia {
  id        Int    @id @default(autoincrement())
  titulo    String
  descricao String

  gravidade Gravidade        @default(BAIXA)
  status    StatusOcorrencia @default(PENDENTE)
  protocolo String           @unique
  endereco  String           @default("")
  disable   Boolean          @default(false)

  categoriaId Int
  categoria   Categoria @relation(fields: [categoriaId], references: [id])

  responsavelId Int?
  responsavel   User? @relation("Responsavel", fields: [responsavelId], references: [id])

  imagens     ImagemOcorrencia[]
  comentarios Comentario[]
  historicos  HistoricoStatus[]
  avaliacao   Avaliacao?

  ordensServico OrdenServico[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ocorrencias")
}

model ImagemOcorrencia {
  id  Int    @id @default(autoincrement())
  url String

  ocorrenciaId Int
  ocorrencia   Ocorrencia @relation(fields: [ocorrenciaId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Comentario {
  id    Int    @id @default(autoincrement())
  texto String

  ocorrenciaId Int
  ocorrencia   Ocorrencia @relation(fields: [ocorrenciaId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model HistoricoStatus {
  id         Int              @id @default(autoincrement())
  status     StatusOcorrencia
  observacao String?

  ocorrenciaId Int
  ocorrencia   Ocorrencia @relation(fields: [ocorrenciaId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Avaliacao {
  id         Int     @id @default(autoincrement())
  nota       Int
  comentario String?

  ocorrenciaId Int        @unique
  ocorrencia   Ocorrencia @relation(fields: [ocorrenciaId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
